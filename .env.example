# Firebase Configuration
# Copy this file to .env and fill in your Firebase project details

# Firebase Project ID
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase Web API Key (for frontend)
FIREBASE_API_KEY=your-firebase-api-key

# Firebase Auth Domain
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Database URL
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com

# Firebase Storage Bucket
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Messaging Sender ID
FIREBASE_MESSAGING_SENDER_ID=123456789012

# Firebase App ID
FIREBASE_APP_ID=1:123456789012:web:abcdef123456789012

# Firebase Measurement ID (for Analytics)
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Service Account (Option 1: JSON string)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Firebase Service Account (Option 2: File path)
# FIREBASE_SERVICE_ACCOUNT_PATH=path/to/firebase-service-account.json

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production

# GeoServer Configuration
GEOSERVER_USERNAME=admin
GEOSERVER_PASSWORD=geoserver

# Application Settings
APP_ENV=development
DEBUG=True
